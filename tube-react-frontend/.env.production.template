# Firebase Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to Git!

# Firebase Configuration (get from Firebase Console -> Project Settings -> General)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# API Configuration - Railway (recommended)
VITE_API_BASE_URL=https://your-railway-app.up.railway.app

# Alternative API URLs (uncomment to use):
# VITE_API_BASE_URL=https://your-app-name.onrender.com        # Render
# VITE_API_BASE_URL=https://your-app-name.fly.dev           # Fly.io  
# VITE_API_BASE_URL=https://your-vercel-app.vercel.app/api  # Vercel
# VITE_API_BASE_URL=https://yourusername.pythonanywhere.com # PythonAnywhere
