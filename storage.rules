rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Sounds storage - users can only access their own files
    match /sounds/{userId}/{dashboardId}/{filename} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow public read access for files from public dashboards
      allow read: if exists(/databases/$(database)/documents/dashboards/$(dashboardId)) &&
        get(/databases/$(database)/documents/dashboards/$(dashboardId)).data.visibility == "public";
    }
    
    // Thumbnails storage - users can only access their own files
    match /thumbnails/{userId}/{dashboardId}/{filename} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow public read access for thumbnails from public dashboards
      allow read: if exists(/databases/$(database)/documents/dashboards/$(dashboardId)) &&
        get(/databases/$(database)/documents/dashboards/$(dashboardId)).data.visibility == "public";
    }
    
    // Temporary files - users can only access their own session files
    match /temp/{sessionId}/{filename} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
